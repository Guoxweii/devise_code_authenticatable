<h2><%= t(".sign_in") %></h2>
<%= form_for resource, url: verify_user_login_code_path(@login_code) do |f| %>
  <div class="field">
    <%= f.email_field :email, placeholder: "email" %>
  </div>

  <div class="field">
    <%= f.text_field :login_code, placeholder: "code" %>
  </div>

  <div class="actions">
    <%= f.submit t(".sign_in") %>
  </div>
<% end %>
<%= link_to t(".resend_code"), resend_user_login_code_path(@login_code) %>
